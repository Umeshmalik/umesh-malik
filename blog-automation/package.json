{
  "name": "blog-automation",
  "version": "1.0.0",
  "description": "Automated blog posting system powered by Claude AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:watch": "nodemon --exec ts-node src/index.ts",
    "cli": "ts-node src/cli.ts",
    "generate": "ts-node src/cli.ts generate",
    "publish": "ts-node src/cli.ts publish",
    "schedule": "ts-node src/cli.ts schedule",
    "topics:add": "ts-node src/cli.ts topics:add",
    "topics:generate": "ts-node src/cli.ts topics:generate",
    "topics:refresh": "ts-node src/cli.ts topics:refresh",
    "test-connection": "ts-node src/cli.ts test-connection",
    "status": "ts-node src/cli.ts status",
    "list": "ts-node src/cli.ts list",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test": "jest --forceExit",
    "test:unit": "jest --testPathPatterns='src/services/__tests__' --forceExit",
    "test:integration": "jest --testPathPatterns='tests/integration' --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "test:watch": "jest --watch",
    "setup": "bash setup.sh",
    "deploy": "bash deploy.sh",
    "validate-config": "ts-node -e \"const { assertConfigValid, printConfigSummary } = require('./src/config/config'); assertConfigValid(); printConfigSummary(); console.log('Configuration is valid.')\"",
    "maintenance:cleanup": "ts-node scripts/cleanup-old-posts.ts",
    "maintenance:backup": "ts-node scripts/backup-database.ts",
    "maintenance:regenerate": "ts-node scripts/regenerate-failed-posts.ts",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "blog",
    "automation",
    "ai",
    "claude",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@prisma/client": "^6.19.2",
    "axios": "^1.13.5",
    "commander": "^14.0.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.4",
    "node-cron": "^4.2.1",
    "prisma": "^6.19.2",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.2",
    "@types/node-cron": "^3.0.11",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
